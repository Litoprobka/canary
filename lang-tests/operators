infix left |> above <|
infix right <| below <<

(<|) : forall 'a 'b. ('a -> 'b) -> 'a -> 'b
(<|) f x = f x

(|>) x f = f x

(>>) : forall 'a 'b 'c. ('a -> 'b) -> ('b -> 'c) -> 'a -> 'c
(>>) f g x = g (f x)

(<<) f g x = f (g x)

infix left >> above |>, <|
infix right << above |>, <|

id : forall 'a. 'a -> 'a
id x = x

thrice = id >> id >> id